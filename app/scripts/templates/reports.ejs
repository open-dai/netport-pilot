<div class="row" id="reports">
  <div class="col-xs-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">Nya rapporter</h4>
      </div>
      <div class="list-group">

        <% $(reports).each(function(i, report) { %>
        <%
          switch (report.status_id) {
            case 2:
              // Handläggs
              report.statusClass = "text-info";
              break;
            case 3:
              // Behandlas
              report.statusClass = "text-warning";
              break;
            case 4:
              // Åtgärdad
              report.statusClass = "text-success";
              break;
            case 5:
              // Åtgärdas ej
              report.statusClass = "text-danger";
              break;
            case 1:
            default:
              // Ej granskad
              report.statusClass = "hide";
          }
        %>
        <a href="#/reports/<%=report.id%>" class="list-group-item">
          <span class="pull-right <%=report.statusClass%>"><%=report.status%></span>
          <h4 class="list-group-item-heading"><%=report.title%></h4>
          <p class="list-group-item-text"><strong><%=report.type%>:</strong> <%=report.description%></p>
        </a>
        <% }); // $(reports).each() %>

      </div>
    </div>
    <div class="text-center">
      <span class="fa fa-check-circle-o" style="font-size:72px;"></span><br>
      <strong>Inga fler rapporter</strong>
    </div>
  </div>
</div>
