<%
  switch (report.status_id) {
    case 2:
      // Handläggs
      report.alertClass = "alert-info";
      break;
    case 3:
      // Behandlas
      report.alertClass = "alert-info";
      break;
    case 4:
      // Åtgärdad
      report.alertClass = "alert-success";
      break;
    case 5:
      // Åtgärdas ej
      report.alertClass = "alert-danger";
      break;
    case 1:
    default:
      // Ej granskad
      report.alertClass = "alert-info";
  }
%>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3><%=report.type%></h3>
  </div>
  <div class="panel-body">
    <div class="alert <%=report.alertClass%>"><%=report.status%></div>
    <%=report.description%>
  </div>
  <div id="map"><span class="fa fa-spinner fa-spin"></span></div>
  <table class="table">
      <thead>
        <tr>
          <th colspan="2">Logg</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%=report.status%></td>
          <td><%=report.added%></td>
        </tr>
      </tbody>
    </table>
</div>
<% console.log(report); %>
